<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <system.webServer>

    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
        <add name="X-Frame-Options" value="SAMEORIGIN" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      </customHeaders>
    </httpProtocol>

    <staticContent>
      <mimeMap fileExtension=".json" mimeType="application/json" xdt:Transform="SetAttributes" xdt:Locator="Match(fileExtension)" />
      <mimeMap fileExtension=".woff" mimeType="application/font-woff" xdt:Transform="SetAttributes" xdt:Locator="Match(fileExtension)" />
      <mimeMap fileExtension=".woff2" mimeType="application/font-woff2" xdt:Transform="SetAttributes" xdt:Locator="Match(fileExtension)" />
    </staticContent>

    <httpCompression>
      <dynamicTypes>
        <add mimeType="application/json" enabled="true" xdt:Transform="SetAttributes" xdt:Locator="Match(mimeType)" />
        <add mimeType="application/font-woff" enabled="true" xdt:Transform="SetAttributes" xdt:Locator="Match(mimeType)" />
      </dynamicTypes>
    </httpCompression>

    <handlers>
      <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
    </handlers>

    <aspNetCore processPath="dotnet" arguments=".\QuizTowerPlatform.Bff.dll" stdoutLogEnabled="false" stdoutLogFile=".\logs\stdout" hostingModel="outofprocess" xdt:Transform="SetAttributes" />
    
  </system.webServer>

  <location path="." inheritInChildApplications="false" xdt:Transform="SetAttributes" />
</configuration>