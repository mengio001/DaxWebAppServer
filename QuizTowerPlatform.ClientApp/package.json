{
  "name": "quiz-tower-platform.client-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "prestart": "node aspnetcore-https",
    "start": "run-script-os",
    "build": "nx build --configuration=development",
    "watch": "nx build --watch --configuration development",
    "test": "nx test",
    "start:windows": "nx serve --port 44480 --ssl --ssl-cert \"%APPDATA%\\ASP.NET\\https\\%npm_package_name%.pem\" --ssl-key \"%APPDATA%\\ASP.NET\\https\\%npm_package_name%.key\" --host=localhost",
    "start:default": "nx serve --port 44480 --ssl --ssl-cert \"$HOME/.aspnet/https/${npm_package_name}.pem\" --ssl-key \"$HOME/.aspnet/https/${npm_package_name}.key\" --host=localhost",
    "build:ssr": "nx run quiz-tower-platform.client-app:server:dev",
    "serve:ssr": "node dist/quiz-tower-platform.client-app/server/main.js",
    "build:ssr:prod": "nx run quiz-tower-platform.client-app:server:production",
    "serve:ssr:prod": "node dist/quiz-tower-platform.client-app/server/main.js",
    "cy:open": "cypress open --env coverage=true",
    "cy:run": "cypress run --env coverage=true",
    "ex:file": "npx nyc report --reporter=lcov"
  },
  "nyc": {
    "exclude": [
      "src/main.ts"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.12",
    "@angular/cdk": "~19.0.0",
    "@angular/common": "^18.2.12",
    "@angular/compiler": "^18.2.12",
    "@angular/core": "^18.2.12",
    "@angular/forms": "^18.2.12",
    "@angular/platform-browser": "^18.2.12",
    "@angular/platform-browser-dynamic": "^18.2.12",
    "@angular/platform-server": "^18.2.12",
    "@angular/router": "^18.2.12",
    "@nguniversal/express-engine": "^7.1.1",
    "ajv": "^8.17.1",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "cypress-dotenv": "^2.0.0",
    "jquery": "^3.7.1",
    "ngx-cookie-service": "^18.0.0",
    "quiz-tower-platform.client-app": "file:",
    "rxjs": "~7.8.1",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.12",
    "@angular-devkit/core": "^18.2.12",
    "@angular-devkit/schematics": "^18.2.12",
    "@angular/cli": "^18.2.12",
    "@angular/compiler-cli": "^18.2.12",
    "@angular/material": "^19.0.0",
    "@cypress/code-coverage": "^3.13.6",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@jsdevtools/coverage-istanbul-loader": "^3.0.5",
    "@nrwl/workspace": "^19.8.4",
    "@nx/angular": "20.1.1",
    "@nx/workspace": "20.1.1",
    "@schematics/angular": "^18.2.12",
    "@types/jasmine": "~5.1.4",
    "cypress": "^13.15.2",
    "istanbul-lib-coverage": "^3.2.2",
    "jasmine-core": "~5.4.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ngx-build-plus": "^18.0.0",
    "nx": "20.1.1",
    "nyc": "^17.1.0",
    "run-script-os": "^1.1.6",
    "typescript": "^5.5.4"
  }
}
