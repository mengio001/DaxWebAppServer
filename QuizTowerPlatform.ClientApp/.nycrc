{
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "include": ["src/**/*.ts"],
    "exclude": [
      "src/**/*.spec.ts",
      "src/main.ts",
      "src/polyfills.ts",
      "cypress/**",
      "node_modules/**"
    ],
    "reporter": ["lcov", "text-summary"],
    "report-dir": "./coverage",
    "instrument": true,
    "sourceMap": true
  }
  