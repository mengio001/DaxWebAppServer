{
  "Application": {
    "Id": 6,
    "Name": "Interventie Platform API",
    "ClientId": "interventieplatform_backend",
    "ClientSecret": "#{INTERVENTIEPLATFORM_BACKEND_SECRET}",
    "Authority": "#{AUTHORITYURL}",
    "InfrastructureApiBaseUrl": "https://#{HOST_PREFIX}api.hrcontrolnet.nl"
  },
  "ConnectionStrings": {
    "RAG_LOG": "#{RAG_LOG}",
    "RAG_LOGONLY": "#{RAG_LOGONLY}",
    "RAG_MYROBIDUS": "#{RAG_MYROBIDUS}"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Debug" },
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "#{SERILOG_WRITETO_PATH}",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {Level:u3} [{SourceContext}] {Message:lj}{NewLine}{Exception}",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 21,
          "fileSizeLimitBytes": 50000000,
          "rollOnFileSizeLimit": true
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "AllowedHosts": "*",
  "CORS_Url": "#{CORS_Url}",
  "EnableSwagger": "#{EnableSwagger}",
  "DjangoApi": {
    "baseUrl": "#{DJANGOAPI_BASEURL}",
    "apiKey": "#{DJANGOAPI_APIKEY}"
  },
  "EmailRenderer": {
    "BoekingUrl": "#{IVP_FRONTEND_URL}/dashboard/interventies/{0}?page=werknemer"
  }
}